extends ../layouts/base.pug


block content 
    form(action="/bikeCreate", method="post")
        input(type="text" name="title"  placeholder="자전거 이름" required) 
        input(type="number"  name="price"  placeholder="가격" required) 
        input(type="text" name="content"  placeholder="내용" required) 
        input(type="number" name="weight"  placeholder="무게" required) 
        input(type="text" name="size"  placeholder="크기" required) 
        input(type="number" name="wheel"  placeholder="바퀴 사이즈" required)     
        SELECT(name="brand")
            option(value="1") 알톤
            option(value="2") AGE
            option(value="3") 언노운
            option(value="4") 엔진11
            option(value="5") 콘스탄틴
            option(value="6") 삼천리
            option(value="7") CELLO 
            option(value="8") TREK
            option(value="9") 메리다
            option(value="10") 스페셜라이즈드
            option(value="11") 엘파마
            option(value="5") 위아위스
            option(value="12") 기타
        input(type="submit" value="작성")


    each bike in bikes
        section.whole
            section.row
                div.bikeBox_1
                    div.bikeBox_txt    
                        div 자전거 이름:---#{bike.title}
                        div 자전거 가격:---#{bike.price} 만원
                        div 자전거 내용:---#{bike.content} 
                        div 자전거 무게:---#{bike.weight} kg
                        div 자전거 크기:---#{bike.size} size
                        div 바퀴 사이즈:---#{bike.wheel} inch
                        div 자전거 브랜드:-#{bike.brand}

                        form.delete_bt(action="bikeDelete", method="POST")
                            input(type="hidden" name="id" value=bike.id)
                            input.delete_bt(type="submit" value="삭제하기")
                    div.bikeBox_img
                    hr
                    br
                     



