extends ../layouts/base.pug


block content 
    form.mainForm(action="/bikeCreate", method="post")
        input.title(type="text" name="title"  placeholder="자전거 이름" required) 
        input(type="number"  name="price"  placeholder="가격 ex)50 = 50만원" required) 
        input(type="text" name="content"  placeholder="내용" required) 
        input(type="number" name="weight"  placeholder="무게" required) 
        input(type="number" name="size"  placeholder="크기" required) 
        input(type="number" name="wheel"  placeholder="바퀴 사이즈" required)     
        SELECT.selectbox(name="brand")
            option(value="알톤") 알톤
            option(value="AGE") AGE
            option(value="언노운") 언노운
            option(value="엔진11") 엔진11
            option(value="콘스탄틴" selected) 콘스탄틴
            option(value="삼천리" ) 삼천리
            option(value="CELLO") CELLO 
            option(value="TREK") TREK
            option(value="메리다") 메리다
            option(value="스페셜라이즈드") 스페셜라이즈드
            option(value="엘파마") 엘파마
            option(value="위아위스") 위아위스
            option(value="기타" ) 기타
        input(type="submit" value="작성")


    each bike in bikes
        section.mainwhole
            div.bikeBox_txt    
                div.txt_name 자전거 이름:--- #{bike.title}
                div.txt_price 자전거 가격:--- #{bike.price} 만원
                div.txt_ct 자전거 내용:--- #{bike.content} 
                div.txt_wt 자전거 무게:--- 약 #{bike.weight} kg
                div.txt_sz 자전거 크기:--- #{bike.size} size
                div.txt_wl 바퀴 사이즈:--- #{bike.wheel} inch
                div.txt_bd 자전거 브랜드:--- #{bike.brand}

                form.delete_bt(action="bikeDelete", method="POST")
                    input(type="hidden" name="id" value=bike.id)
                    input.delete_bt(type="submit" value="삭제하기")
            hr
            br
                     



